<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".StatusListActivity" >
    
   <LinearLayout
        android:id="@+id/layoutAirportName"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <TextView
            android:id="@+id/tvAirportCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtAirportCode" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvHeaderDelays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/layoutAirportName"
        android:text="@string/txtHeaderDelays"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <ListView
        android:id="@+id/lvDelays"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvHeaderDelays" >
    </ListView>

    <TextView
        android:id="@+id/tvHeaderSecurity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/lvDelays"
        android:text="@string/txtHeaderSecurity"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/btnSecurityWaitTimes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/tvHeaderSecurity"
        android:text="@string/txtSecurityDetailsButton" />
    
    <TextView
        android:id="@+id/tvHeaderWeather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/btnSecurityWaitTimes"
        android:text="@string/txtHeaderWeather"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <TextView
        android:id="@+id/tvWeather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvHeaderWeather"
        android:text="@string/txtWeather"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <RelativeLayout
        android:id="@+id/layoutTransitTimes"
        android:layout_below="@id/tvWeather"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >
        <LinearLayout
            android:id="@+id/layoutTransit1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:layout_alignParentLeft="true">

            <TextView
                android:id="@+id/tvHeaderTransit1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                android:text="@string/txtHeaderTransit1" />

            <TextView
                android:id="@+id/tvTransitValue1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                android:text="@string/txtTransitTime1" />

        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/layoutTransit2"
            android:layout_below="@id/layoutTransit1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true" >

            <TextView
                android:id="@+id/tvHeaderTransit2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                android:text="@string/txtHeaderTransit2" />

            <TextView
                android:id="@+id/tvTransitValue2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                android:text="@string/txtTransitTime2" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvTransitAnnotation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutTransit2"
            android:layout_gravity="center_vertical"
            android:text="@string/txtTransitAnnotation" />

        </RelativeLayout>

</RelativeLayout>
